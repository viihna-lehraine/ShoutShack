  "license": "GNU GPL v3",
  "description": "",
  "keywords": [],
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:css": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/output.css",
    "build:server": "rm -rf ./backend/dist/* && tsc -p ./backend/config/tsconfig.json && node ./backend/config/scripts/fix-imports.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:sync\"",
    "dev:backend": "nodemon",
    "dev:sync": "node -e \"import('browser-sync').then(bs => bs.create().init({ proxy: 'localhost:3001', files: ['public/html/**/*.html', 'public/css/**/*.css'], reloadDelay: 500, open: false, notify: false }))\"",
    "snyk:monitor": "snyk monitor",
    "snyk:test": "snyk test",
    "start": "node ./backend/dist/server.js"
  },
  "dependencies": {
    "@fastify/static": "^8.0.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  },
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ttypescript": "^1.5.15",
    "typescript": "^5.6.3"
  }
}
