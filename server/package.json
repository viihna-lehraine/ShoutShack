{
  "name": "brainblot-backend",
  "version": "1.0.0",
  "author": "Viihna Lehraine",
  "description": "Free, customizable personal guestbook",
  "main": "dist/app.mjs",
  "type": "module",
  "scripts": {
    "backupAndClean": "node ./config/scripts/distBackup.mjs && npm run cleanCompiled && npm run cleanTsbuildinfo",
    "build": "npm run build1 && npm run build2",
    "build1": "npm run backupAndClean && npm run tsc && npm run removeVar && npm run mjsExtensions",
    "build2": "npm run lintAndFormat:mjs && npm run es-check && npm run postCompile && npm run removeTypeImports",
    "circular": "madge --circular ./backend/src/ --extensions ts",
    "cleanCompiled": "find ./backend/dist/ -type f -name '*.mjs' -delete",
    "cleanTsbuildinfo": "find ./backend/dist/ -type f -name '*.tsbuildinfo' -delete",
    "es-check": "es-check es2022 './backend/dist/**/*.mjs' --module",
    "format": "prettier --write './backend/dist/**/*.mjs' './backend/src/**/*.ts'",
    "format:mjs": "prettier --write './backend/dist/**/*.mjs'",
    "format:ts": "prettier --write './backend/src/**/*.ts'",
    "lint": "eslint --fix './backend/dist/**/*.mjs' && eslint --fix './backendsrc/**/*.ts'",
    "lint:mjs": "eslint --fix './backend/dist/**/*.mjs'",
    "lint:ts": "eslint --fix --cache './backend/src/**/*.ts'",
    "lintAndFormat:mjs": "npm-run-all --parallel lint:mjs format:mjs",
    "lintAndFormat:ts": "npm-run-all --parallel lint:ts format:ts",
    "mjsExtensions": "node ./config/scripts/mjsExtensions.mjs",
    "postCompile": "node ./config/scripts/postCompile.mjs",
    "removeTypeImports": "node ./config/scripts/removeTypeImports.mjs",
    "removeVar": "node ./config/scripts/removeVar.mjs",
    "sass": "sass --watch ./public/scss/main.scss:./public/css/main.css --style=compressed --source-map",
    "startFrontend": "nodemon --watch ./public/ --exec \"npm run sass\"",
    "startServer": "node ./backend/dist/app.mjs",
    "startServer:dev": "nodemon ./backend/dist/app.mjs",
    "tsc": "tsc --project tsconfig.json",
    "test": "vitest",
    "watch:all": "npm-run-all --parallel watch:lint watch:format watch:tsc",
    "watch:format": "npm-run-all --parallel watch:format:ts watch:format:js",
    "watch:format:mjs": "chokidar './backend/dist/**/*.mjs' -c 'npm run format:js'",
    "watch:format:ts": "chokidar './backend/src/**/*.ts' -c 'npm run format:ts'",
    "watch:lint": "npm-run-all --parallel watch:lint:ts watch:lint:mjs",
    "watch:lint:mjs": "chokidar './backend/dist/**/*.mjs' -c 'npm run lint:mjs'",
    "watch:lint:ts": "chokidar './backend/src/**/*.ts' -c 'npm run lint:ts'",
    "watch:tsc": "tsc --watch --project tsconfig.json"
  },
  "keywords": [],
  "license": "GNU GPLv3",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.4",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/hpp": "^0.2.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/qrcode": "^1.5.5",
    "@types/response-time": "^2.3.8",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vitest/ui": "^2.0.5",
    "chokidar-cli": "^3.0.0",
    "es-check": "^7.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "madge": "^8.0.0",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "sass": "^1.79.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.8",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/zxcvbn": "^4.4.4",
    "argon2": "^0.40.3",
    "axios": "^1.7.5",
    "bcrypt": "^5.1.1",
    "compressing": "^1.10.1",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^16.4.5",
    "eslint-plugin": "^1.0.1",
    "express": "^4.21.1",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.0",
    "fast-xml-parser": "^4.5.0",
    "fido2-lib": "^3.5.3",
    "file-type": "^19.5.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-graceful-shutdown": "^3.1.13",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "proper-lockfile": "^4.1.2",
    "qrcode": "^1.5.4",
    "range_check": "^3.2.0",
    "rate-limiter-flexible": "^5.0.3",
    "raw-body": "^3.0.0",
    "redis": "^4.7.0",
    "response-time": "^2.3.2",
    "sequelize": "^6.37.3",
    "speakeasy": "^2.0.0",
    "tar": "^7.4.3",
    "toobusy-js": "^0.5.1",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-logstash": "^1.2.1",
    "winston-transport": "^4.8.0",
    "xss": "^1.0.15",
    "yub": "^0.11.1",
    "zxcvbn": "^4.4.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
